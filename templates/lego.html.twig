
{% extends 'base.html.twig' %}

{% block title %}Lego{% endblock %}
{% block body %}
{% for lego in legos %}

    {{ parent() }}
<nav>
<a href="{{ path('login') }}">Se connecter</a> |
  <a href="{{ path('home') }}">All</a> |
  {% for collection in collections %}
    <a href="{{ path('filter_by_collection', {'id': collection.id}) }}">
      {{ collection.name }}
    </a>{% if not loop.last %} | {% endif %}
  {% endfor %}
</nav>
    {# Child-specific content goes here #}
    <div class="content">
        <!-- Your additional content -->
    </div>


<div class="lego_card">
      <div class="info_section">
        <div class="lego_header">
          <img class="locandina" src="/images/{{lego.boxImage}}"/>
          <h1>{{lego.name}}</h1>
         <h4>Collection : {{ lego.legocollection.name }}</h4>
          <span class="pieces">Pièces : {{lego.pieces}}</span>
          <p class="price">{{lego.price}}€</p><br>
          <a href="index.php?buy={{lego.id}}"><button>Buy</button></a>
        </div>
        <div class="lego_desc">
          <p class="text">
            {{lego.description}}
        </p>
        </div>
        <div class="lego_social">
          <ul>
            <li><i class="material-icons">share</i></li>
            <li><i class="material-icons"></i></li>
            <li><i class="material-icons">chat_bubble</i></li>
          </ul>

        </div>

      </div>
      <div class="blur_back">
        <img src="/images/{{lego.legoImage}}" alt="background lego card">
      </div>
</div>
{% endfor %}
{% endblock body %}
